@model IEnumerable<HERO.Models.Objects.WeeklyClassSetup>

@{
    ViewBag.Title = "Add a Recurring Reminder";
}

@using (Html.BeginForm("AddRecurring", "Reminders", FormMethod.Post, new { style = "display:none;", id = "add-recurring-form" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" value="" name="weeklyId" id="class-id-input"/>
}

@Html.Partial("_LeftMenu")

<div class="col-md-10">
    <div class="row">
        <div class="bootstrap-admin-content-title">
            <h1>Add a Recurring Reminder</h1>
        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="row bootstrap-admin-no-edges-padding">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">No Recurring Classes Found</div>
                    </div>
                    <div class="bootstrap-admin-panel-content">
                        <p>Woops! It looks like there currently aren't any recurring classes at your gym to set reminders for.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Recurring Classes</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Type)</th>
                                <th>@Html.DisplayNameFor(m => m.Days)</th>
                                <th>@Html.DisplayNameFor(m => m.Time)</th>
                                <th>@Html.DisplayNameFor(m => m.Duration)</th>
                                <th>@Html.DisplayNameFor(m => m.MaxAttendance)</th>
                                <th>Add Reminder</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Type)</td>
                                    <td>@string.Join(", ", item.Days.Select(x => x.Day.ToString()))</td>
                                    <td>@item.Time.ToString(@"hh\:mm")</td>
                                    <td>@(item.Duration + " Hours")</td>
                                    <td>@Html.DisplayFor(m => item.MaxAttendance)</td>
                                    <td><a href="#" class="btn btn-xs btn-default add-recurring-button" data-weekly-id="@item.Id">Add</a></td>
                                </tr>
                            }
                        </thead>
                    </table>
                </div>
            </div>
            @Html.ActionLink("Cancel", "Index", new { controller = "Home" }, new { @class = "btn btn-primary" } )
        </div>
        }
</div>

@section scripts {
    <script>
        $(".add-recurring-button").click(function () {
            var $classId = $(this).attr("data-weekly-id");
            $("#class-id-input").val($classId);
            $("#add-recurring-form").submit();
        });
    </script>
}