@{
    ViewBag.Title = "Missing Performance Reminders";
}
@model IEnumerable<HERO.Models.Objects.Class>

@Html.Partial("_LeftMenu")

<div class="col-md-10">
    <div class="row">
        <div class="bootstrap-admin-content-title">
            <h1>Performance Reminders</h1>
        </div>
    </div>
    <div class="row bootstrap-admin-no-edges-padding">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Alerts</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    @foreach (var item in Model)
                    {
                        <div class="alert alert-info">
                            <strong>Missing Performance!</strong> You have yet to add your performance for @item.Type on @item.Time.Value.ToString("MM/dd/yyyy") at @item.Time.Value.ToString(@"hh\:mm tt"). @Html.ActionLink("Click here", "Create", new { controller = "Performances", classId = item.Id }) to add one.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>