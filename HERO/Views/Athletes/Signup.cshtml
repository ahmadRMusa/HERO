@model HERO.Models.Objects.Athlete

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Landing.cshtml";
}

<div class="container center-div">
    @using (Html.BeginForm("Signup", "Athlete", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h1>Complete Your Registration</h1>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="text" class="form-control" id="FirstName" name="FirstName"/>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="text" class="form-control" id="LastName" name="LastName" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="birthdatepicker">Date of Birth</label>
            <div class="col-lg-10">
                <input type="text" class="form-control datepicker" id="birthdatepicker" value="02/16/12" name="BirthDate">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">Gender</label>
            <div class="col-lg-10">
                @Html.RadioButton("Gender", "Male")
                <label for="Gender">Male</label>
                <br />
                @Html.RadioButton("Gender", "Female")
                <label for="Gender">Female</label>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="col-lg-2 control-label" for="textarea-wysihtml5">Biography</label>
            <div class="col-lg-10">
                <textarea id="textarea-wysihtml5" class="form-control textarea-wysihtml5" placeholder="Enter text..." style="width: 100%; height: 200px"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/vendors")
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker();
            $('.uniform_on').uniform();
            $('.chzn-select').chosen();
        });
    </script>
}